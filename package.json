{
    "name": "eq-visualizer",
    "module": "index.ts",
    "type": "module",
    "files": [
        "src/index.ts",
        "assets/*"
    ],
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "npm run",
        "tailwindcss": "npx tailwindcss -i ./styles.css -o ./dist/output.css --watch",
        "tailwindcss_build": "npx tailwindcss -i ./styles.css -o ./dist/output.css --minify",
        "dev": "bun build --watch --outdir=dist/ ./src/index.ts --entry-naming '[dir]/[name].[ext]'",
        "watch": "npm-run-all --parallel build-ts tailwindcss cp-wasm-eq cp-wasm-fft",
        "runall": "npm-run-all --parallel bundle tailwindcss_build cp-wasm-eq cp-wasm-fft cp-html",
        "watch_no_wasm": "npm-run-all --parallel build-ts tailwindcss",
        "buildall": "bun build_wasm_visualizer && bun build_wasm_fft && bun run runall",
        "build_wasm_visualizer": "cd ./wasm-eq-visualizer && wasm-pack build --target web",
        "build_wasm_fft": "cd ./wasm-fft && wasm-pack build --target web",
        "cp-wasm-eq": "cp ./wasm-eq-visualizer/pkg/wasm_eq_visualizer_bg.wasm ./dist",
        "cp-wasm-fft": "cp ./wasm-fft/pkg/wasm_fft_bg.wasm ./dist",
        "build-ts": "./build.js",
        "cp-html": "cp ./index.html ./dist",
        "bundle": "chmod +x run.js && ./run.js"
    },
    "devDependencies": {
        "bun-types": "latest",
        "esbuild": "^0.21.4",
        "esbuild-plugin-copy": "^2.1.1",
        "tailwindcss": "^3.4.3"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "npm-run-all": "^4.1.5",
        "wasm-eq-visualizer": "file:./wasm-eq-visualizer/pkg/",
        "wasm-fft": "file:./wasm-fft/pkg/"
    }
}
